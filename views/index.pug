doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible" content="IE=edge")
        meta(name="viewport" content="width=device-width, initial-scale=1.0")
        link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous")
        title Link shortener
    body
        .container
            h1 Link shortener
            form(method='POST' action='/' class='d-flex flex-row align-items-center flex-wrap')
                .input-group
                    input.form-control(name="url" type='text' placeholder='Enter your url' required='')   
                    button.btn.btn-primary Shorten
            table.table.table-striped.table-hover.mt-3
                thead
                    th #
                    th Shortened
                    th URL 
                    th Clicks 
                tbody
                    each val, key in links
                        tr
                            td #{key+1}
                            td
                                a(href=`localhost:5000/${val.id}`) localhost:5000/#{val.id}
                            td 
                                a #{val.fullUrl}
                            td #{val.clicks}